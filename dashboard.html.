<!-- login.html -->
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>MHS Login</title>
<link rel="stylesheet" href="style.css" />
<script>
  function validateLogin(event) {
    event.preventDefault();
    const cnic = document.getElementById('cnic').value.trim();
    // Basic CNIC format: 13 digits, allow dashes (e.g., 12345-1234567-1)
    const cnicRegex = /^[0-9]{5}-[0-9]{7}-[0-9]$/;
    if (!cnicRegex.test(cnic)) {
      alert('Please enter a valid CNIC (e.g. 12345-1234567-1)');
      return false;
    }
    // For demo, accept any valid format CNIC, redirect to dashboard
    window.location.href = 'dashboard.html';
  }
</script>
</head>
<body>
  <div class="login-container">
    <h2>M.Hanif & Sons - Login</h2>
    <form onsubmit="validateLogin(event)">
      <label for="cnic">Enter CNIC:</label><br />
      <input type="text" id="cnic" name="cnic" placeholder="12345-1234567-1" required /><br /><br />
      <button type="submit">Login</button>
    </form>
  </div>
</body>
</html>
